<?xml version="1.0" encoding="UTF-8" ?>
<OpenSCADA>
    <!--
    This is the OpenSCADA configuration file. 
    -->
    <station id="DemoStation">
	<!--
	Discribe internal parameter for station "server1".
	Station this only OpenSCADA programm.
	-->
	<prm id="workdir">/usr/share/openscada</prm>	
	<prm id="target_log">2</prm>
	<prm id="mess_lev">0</prm>
	<prm id="mess_buf">1000</prm>	
	<prm id="DefaultBD">SQLite:./DATA/DemoSt.db</prm>
	
	<section id="Security">
	    <prm id="UserBD">::sec_usr</prm>
	    <prm id="GrpBD">::sec_grp</prm>
	</section>    
	
	<section id="ModSched">
	    <prm id="mod_path">/usr/lib/openscada</prm>
	    <prm id="mod_auto">*</prm>
	</section>

	<section id="BD">
	</section>    
	
	<section id="Transport">
	    <prm id="InBD">::transp_in</prm>
	    <prm id="OutBD">::transp_out</prm>
    	    <module id="Sockets">
    		<prm id="max_sock_queue">15</prm>	    
    		<prm id="max_fork">5</prm>	    
    		<prm id="buf_len">1</prm>	    
    	    </module>    			
	</section>    
	
	<section id="Controller">
	    <prm id="GenBD">::controllers</prm>	    
	</section>
	
	<section id="Archive">
	    <prm id="MessBD">::arh_mess</prm>
	    <prm id="ValBD">::arh_val</prm>
	    <prm id="mess_period">5</prm>
	</section>    
	
	<section id="Protocol">
	</section>    
	
	<section id="UI">
	</section>    
	
	<section id="Special">
    	    <module id="SystemTests">
		<prm id="XML" on="0" per="0" file="./3FC4B8E7.xml"/>
		<prm id="MESS" on="0" per="0" arh="sys_arh" t_arh="base_arh" categ=""/>
		<prm id="PARAM" on="0" per="0" name="TEST_VirtualC"/>
		<prm id="SOAttDet" on="0" per="10" name="../../lib/openscada/tr_Sockets.so" full="1"/>
		<prm id="Controll" on="0" per="0"/>
		<prm id="Val" on="0" per="1" name="T_CPU/value"/>
		<prm id="Val" on="0" per="1" name="TdiskA/value"/>
		<prm id="Val" on="0" per="1" name="LoadCPU/value"/>
		<prm id="BD" on="0" per="10" type="MySQL" bd=";roman;123456;OpenSCADA;;/var/lib/mysql/mysql.sock" table="test" size="1000"/>
		<prm id="BD" on="0" per="10" type="DBF" bd="./DATA1" table="test.dbf" size="1000"/>
		<prm id="BD" on="0" per="10" type="SQLite" bd="./DATA/test.db" table="test" size="1000"/>
		<prm id="TrOut" on="0" per="10" addr="TCP:127.0.0.1:10001" type="Sockets" req="time"/>
		<prm id="TrOut" on="0" per="10" addr="UDP:127.0.0.1:10001" type="Sockets" req="time"/>
		<prm id="TrOut" on="0" per="10" addr="UNIX:./oscada" type="Sockets" req="time"/>
		<prm id="TrOut" on="0" per="10" addr="UDP:127.0.0.1:daytime" type="Sockets" req="time"/>
    	    </module>    			
	</section>    
  </station>

</OpenSCADA>

