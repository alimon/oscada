<?xml version="1.0" encoding="UTF-8" ?>
<OpenSCADA>
    <!--
    This is the OpenSCADA configuration file.
    -->
    <station id="WorkStation" name="Рабочая станция">
	<!--
	Discribe internal parameter for station".
	Station this OpenSCADA programm.
	-->
	<prm id="SYSOptCfg">1</prm>
	<prm id="Workdir">/var/spool/openscada</prm>
	<prm id="IcoDir">./icons</prm>
	<prm id="ModDir">/usr/lib/openscada</prm>
	<prm id="LogTarget">10</prm>
	<prm id="MessLev">0</prm>
	<prm id="WorkDB">SQLite.GenDB</prm>

	<node id="sub_BD">
	    <tbl id="DB">
		<fld ID="GenDB" TYPE="SQLite" NAME="Основная БД" ADDR="./DATA/MainSt.db" CODEPAGE="UTF8"/>
	    </tbl>
	</node>

	<node id="sub_Security">
	</node>

	<node id="sub_ModSched">
	    <prm id="ModAuto">*</prm>
	    <prm id="ChkPer">0</prm>
	</node>

	<node id="sub_Transport">
	    <tbl id="Transport_in">
		<fld
		    ID="WEB_1"
		    MODULE="Sockets"
		    NAME="Главный WWW-интерфейс"
		    DESCRIPT=""
		    ADDR="TCP::10002:0"
		    PROT="HTTP"
		    START="1"
		    BufLen="5"
		    MaxClients="100"
		    SocketsMaxQueue="10"/>
		<fld
		    ID="WEB_2"
		    MODULE="Sockets"
		    NAME="Резервный WWW-интерфейс"
		    DESCRIPT=""
		    ADDR="TCP::10004:0"
		    PROT="HTTP"
		    START="1"
		    BufLen="5"
		    MaxClients="100"
		    SocketsMaxQueue="10"/>
		<fld
		    ID="CNTR"
		    MODULE="Sockets"
		    NAME="Интерфейс контроля OpenSCADA"
		    DESCRIPT=""
		    ADDR="TCP::10005:1"
		    PROT="SelfSystem"
		    START="1"
		    BufLen="10"
		    MaxClients="100"
		    SocketsMaxQueue="10"/>
	    </tbl>
	</node>

	<node id="sub_DAQ">
	</node>

	<node id="sub_Archive">
	    <prm id="MessBufSize">1000</prm>
	    <prm id="MessPeriod">5</prm>
	    <prm id="ValPeriod">1000</prm>
	    <prm id="ValPriority">10</prm>
	</node>

	<node id="sub_UI">
	    <node id="mod_QTStarter">
		<prm id="StartMod">QTCfg</prm>
	    </node>
	    <node id="mod_WebCfg">
		<prm id="SessTimeLife">20</prm>
	    </node>
	</node>

    </station>
</OpenSCADA>
