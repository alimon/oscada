#!/bin/sh

# Work directory check and prepare
StartCfgDir=@sysconfdir_full@
StartWorkDir=@datadir_full@/openscada
CfgDir=$StartCfgDir
WorkDir=$StartWorkDir

if test ! -w $WorkDir/LibsDB || test ! -w $WorkDir/AGLKS ||
	test -d $WorkDir/ARCHIVES/VAL -a ! -w $WorkDir/ARCHIVES/VAL ||
	test ! -d $WorkDir/ARCHIVES/VAL -a ! -w $WorkDir; then
    WorkDir=~/.openscada
    CfgDir=$WorkDir
    if test ! -d $WorkDir; then mkdir -m 700 $WorkDir; fi
    if test ! -L $WorkDir/icons; then ln -s $StartWorkDir/icons $WorkDir/icons; fi
    if test ! -d $WorkDir/LibsDB; then cp -R $StartWorkDir/LibsDB $WorkDir; fi
    if test ! -d $WorkDir/AGLKS; then cp -R $StartWorkDir/AGLKS $WorkDir; fi
    if test ! -e $WorkDir/oscada_AGLKS.xml; then cp $StartCfgDir/oscada_AGLKS.xml $CfgDir; fi
fi
if test ! -d $WorkDir/ARCHIVES; then
    mkdir -pm 700 $WorkDir/ARCHIVES/MESS;
    mkdir -pm 700 $WorkDir/ARCHIVES/VAL;
fi
cd $WorkDir

# Programm command and lock file
pCmd="@bindir_full@/openscada --CoreDumpAllow --Config=$CfgDir/oscada_AGLKS.xml"
pLock=".AGLKS.lock"

# Check for already started programm present
if [ -f $pLock ] && ps -Ao pid,command | grep "$(cat ${pLock})[ ]*${pCmd}" > /dev/null; then
    echo "OpenSCADA Model AGLKS-station already started!";
    exit 1;
fi

# Call programm
$pCmd $@ &
pPid=$!

# Create lock file
echo $pPid > $pLock

# Wait for programm stop
wait $pPid
echo "Program rezult: $?"

# Core dump file "core" into work directory process
if [ -f $WorkDir/core -a -n "$(which gdb)" ]; then
    cd $WorkDir
    echo "Core dump process for back trace purchase to file crash_AGLKS_$(date +%F_%H:%M).txt"
    gdb @bindir_full@/openscada --core core --batch --quiet -ex "thread apply all bt full" -ex "quit" > crash_AGLKS_$(date +%F_%H:%M).txt
    rm -f core
fi

# Remove lock file
rm -f $pLock
