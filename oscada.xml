<?xml version="1.0" encoding="UTF-8" ?>
<OpenSCADA>
    <!--
    This is the OpenSCADA configuration file. 
    -->
    <station id="WorkStation">
    	<!--
	Discribe internal parameter for station".
	Station this OpenSCADA programm.
	-->    
	<prm id="Workdir">/var/spool/openscada</prm>
	<prm id="LogTarget">3</prm>
	<prm id="MessLev">0</prm>
	<prm id="MessBuf">1000</prm>	
	<prm id="DefaultBD">SQLite:./DATA/WorkSt.db</prm>
    
	<subsys id="Security">
	    <prm id="UserBD">::SecUsr</prm>
	    <prm id="GrpBD">::SecGrp</prm>
	</subsys>    
    
	<subsys id="ModSched">
	    <prm id="ModPath">/usr/lib/openscada</prm>
	    <prm id="ModAuto">*</prm>
	</subsys>
    
	<subsys id="Transport">
	    <prm id="InBD">::TranspIn</prm>
	    <prm id="OutBD">::TranspOut</prm>
	    <tbl id="In">
		<fld NAME="WWW" DESCRIPT="WWW generic" MODULE="Sockets" ADDR="TCP::10002:0" PROT="HTTP" START="1"/>
		<fld NAME="WWW1" DESCRIPT="WWW reserve" MODULE="Sockets" ADDR="TCP::10004:0" PROT="HTTP" START="1"/>
	    </tbl>
	</subsys>    
    
	<subsys id="Controller">
	    <prm id="GenBD">::Controllers</prm>
	</subsys>    
    
	<subsys id="Archive">
	    <prm id="MessBD">::ArchMess</prm>
	    <prm id="ValBD">::ArchVal</prm>
	    <prm id="MessPeriod">5</prm>
	</subsys>    
    
    </station>

</OpenSCADA>

