<?xml version="1.0" encoding="UTF-8" ?>
<OpenSCADA>
    <!--
    This is the OpenSCADA configuration file.
    -->
    <station id="WorkStation" name="Рабочая станция">
    	<!--
	Discribe internal parameter for station".
	Station this OpenSCADA programm.
	-->
	<prm id="Workdir">/var/spool/openscada</prm>
	<prm id="LogTarget">3</prm>
	<prm id="MessLev">0</prm>
	<prm id="MessBuf">1000</prm>
	<prm id="DefaultBD">SQLite:./DATA/WorkSt.db</prm>
    
	<node id="sub_Security">
	    <prm id="UserBD">::SecUsr</prm>
	    <prm id="GrpBD">::SecGrp</prm>

	    <tbl id="User">
		<fld
    		    NAME="user"
		    DESCR="Пользователь"
    		    ID="1"
		    PASS=""
		    GRP="root"/>
	    </tbl>
	</node>
	
	<node id="sub_ModSched">
	    <prm id="ModPath">/usr/lib/openscada</prm>
	    <prm id="ModAuto">*</prm>
	</node>
    
	<node id="sub_Transport">
	    <prm id="InBD">::TranspIn</prm>
	    <prm id="OutBD">::TranspOut</prm>
	    
	    <tbl id="In">
                <fld
            	    NAME="WEB_1"
		    DESCRIPT="Главный WWW-интерфейс"
		    MODULE="Sockets"
		    ADDR="TCP::10002:0"
		    PROT="HTTP"
		    START="1"
		    SocketsBufLen="5"
		    SocketsMaxQueue="10"
		    SocketsMaxClient="10"/>
		<fld
		    NAME="WEB_2"
		    DESCRIPT="Резервный WWW-интерфейс"
		    MODULE="Sockets"
		    ADDR="TCP::10004:0"
		    PROT="HTTP"
		    START="1"
		    SocketsBufLen="5"
		    SocketsMaxQueue="10"
		    SocketsMaxClient="10"/>
	    </tbl>
	</node>
	
	<node id="sub_DAQ">
	    <prm id="GenBD">::Controllers</prm>
	</node>
	
	<node id="sub_Archive">
	    <prm id="MessBD">::ArchMess</prm>
	    <prm id="ValBD">::ArchVal</prm>
	    <prm id="MessPeriod">5</prm>
	</node>
    </station>
</OpenSCADA>
